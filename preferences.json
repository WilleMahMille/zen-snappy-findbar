{
  "name": "Snappy findbar",
  "description": "A Zen Browser mod that transforms the findbar into a sleek, centered overlay at the top of your browser with smooth animations and a minimalistic design.",
  "author": "WilleMahMille",
  "version": "1.0.0",
  "files": ["chrome.css"],
  "categories": ["UI", "Animation"],
  "preferences": [
    {
      "type": "heading",
      "title": "Animation Settings"
    },
    {
      "type": "string",
      "id": "snappy-findbar.animation-duration",
      "title": "Animation Duration",
      "description": "Duration of the show/hide animation (e.g., 0.2s, 300ms)",
      "default": "0.2s",
      "css-variable": "--snappy-findbar-animation-duration"
    },
    {
      "type": "string",
      "id": "snappy-findbar.animation-easing",
      "title": "Animation Easing",
      "description": "Easing function for animation (e.g., ease, ease-in-out, cubic-bezier(0.4, 0, 0.2, 1))",
      "default": "ease",
      "css-variable": "--snappy-findbar-animation-easing"
    },
    {
      "type": "heading",
      "title": "Position Settings"
    },
    {
      "type": "string",
      "id": "snappy-findbar.position-top",
      "title": "Top Position",
      "description": "Distance from top of viewport (e.g., 5vh, 50px)",
      "default": "5vh",
      "css-variable": "--snappy-findbar-position-top"
    },
    {
      "type": "heading",
      "title": "Visual Settings"
    },
    {
      "type": "color",
      "id": "snappy-findbar.background-color",
      "title": "Background Color",
      "description": "Background color of the findbar",
      "default": "#000000",
      "css-variable": "--snappy-findbar-background-color"
    },
    {
      "type": "string",
      "id": "snappy-findbar.border-radius",
      "title": "Border Radius",
      "description": "Roundness of corners (e.g., 15px, 1rem)",
      "default": "15px",
      "css-variable": "--snappy-findbar-border-radius"
    },
    {
      "type": "color",
      "id": "snappy-findbar.border-color",
      "title": "Border Color",
      "description": "Color of the findbar border",
      "default": "#808080",
      "css-variable": "--snappy-findbar-border-color"
    }
  ]
}
